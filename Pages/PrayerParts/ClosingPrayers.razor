
@switch (LanguageKind)
{
    case LanguageKindEnum.EnglishOlder:
        <Heading HeadingKind="HeadingKind">
            Closing Prayers
        </Heading>

        <GloryNowAndForever />

        <LordHaveMercy TimesToSay="3" />

        <p>
            O Lord Jesus Christ, the Son of God, through the intercessions of Thy most pure Mother
            <br />
            and of all Thy Saints@(getStaintText()),
            <br />
            have mercy on us and save us, forasmuch as Thou art good and lovest mankind.
            <Amen/>
        </p>
        break;
    case LanguageKindEnum.EnglishModern:
    case LanguageKindEnum.EnglishMixed:
    default:
        <Heading HeadingKind="HeadingKind">
            Closing Prayers
        </Heading>

        <GloryNowAndForever />

        <LordHaveMercy TimesToSay="3" />

        <p>
            O Lord Jesus Christ, the Son of God, through the intercessions of Your most pure Mother
            <br />
            and of all Your Saints@(getStaintText()),
            <br />
            have mercy on us and save us, for You are good and love mankind.
            <Amen />
        </p>
        break;
}

@code {
    [Parameter, EditorRequired]
    public DateTime Date { get; set; }
    
    [Parameter, EditorRequired]
    public HeadingKindEnum HeadingKind { get; set; }

    [CascadingParameter]
    public LanguageKindEnum LanguageKind { get; set; } = LanguageKindEnum.EnglishModern;

    private string getStaintText()
    {
        var saintOfToday = "";
        if (string.IsNullOrWhiteSpace(saintOfToday))
        {
            return string.Empty;
        }
        else
        {
            return $", especially {saintOfToday} whose memory we commemorate today";
        }
    }
}
