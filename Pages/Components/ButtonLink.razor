
<a class="button-link" style="background-color: @(BackgroundColor); color: @(ForeColor);"
   @onclick="@(OnClick)">
    @ChildContent
</a>

@code {
    [Parameter, EditorRequired]
    public EventCallback OnClick { get; set; }

    [Parameter, EditorRequired]
    public RenderFragment? ChildContent { get; set; } = null!;

    [Parameter]
    public string BackgroundColor { get; set; } = StaticColors.DarkRed;

    [Parameter]
    public string ForeColor { get; set; } = StaticColors.LightBeige;
}
