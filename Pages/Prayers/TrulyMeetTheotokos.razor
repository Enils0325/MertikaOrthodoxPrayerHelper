
<Heading HeadingKind="HeadingKind">

    @switch (LanguageKind)
    {
        case LanguageKindEnum.EnglishModern:
        case LanguageKindEnum.EnglishMixed:
        case LanguageKindEnum.EnglishOlder:
        default:
            <span>It is truly meet</span>
            break;
    }

</Heading>

@switch (LanguageKind)
{
    case LanguageKindEnum.EnglishModern:
        <p>
            It is truly right to bless you, O Theotokos, 
            ever-blessed and most pure, and the Mother of our God. 
            More honorable than the Cherubim, and more glorious beyond compare than the Seraphim, 
            without defilement you gave birth to God the Word. 
            True Mother of God, we magnify you!
        </p>
        break;
    case LanguageKindEnum.EnglishMixed:
    case LanguageKindEnum.EnglishOlder:
    default:
        <p>
            It is truly meet to bless thee, O Theotokos,
            the ever blessed and most pure, and the Mother of our God.
            More honorable than the Cherubim, and more glorious beyond compare than the Seraphim.
            Without corruption you gave birth to God the Word.
            True Theotokos, we magnify thee!
        </p>
        break;
}

@code {
    [Parameter, EditorRequired]
    public HeadingKindEnum HeadingKind { get; set; }

    [CascadingParameter]
    public LanguageKindEnum LanguageKind { get; set; }

}
